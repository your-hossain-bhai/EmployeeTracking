# Firestore Security Rules
# firestore.rules
#
# Deploy these rules to Firebase:
#   firebase deploy --only firestore:rules
#
# Or copy to Firebase Console > Firestore > Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the document owner
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user belongs to company
    function belongsToCompany(companyId) {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == companyId;
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone authenticated can read users from same company
      // Allow reading own profile without company check (for initial setup)
      allow read: if isAuthenticated() && (
                    isOwner(userId) ||
                    belongsToCompany(resource.data.companyId)
                  );
      
      // Users can update their own profile, admins can update any user
      allow update: if isOwner(userId) || isAdmin();
      
      // Users can create their OWN user document (for registration)
      // Admins can create any user document
      allow create: if isAuthenticated() && (
                      isOwner(userId) ||
                      isAdmin()
                    );
      
      // Only admins can delete users
      allow delete: if isAdmin();
    }
    
    // Companies collection
    match /companies/{companyId} {
      // Users can read their own company
      allow read: if belongsToCompany(companyId);
      
      // Only admins can write to companies
      allow write: if isAdmin();
    }
    
    // Locations collection
    match /locations/{locationId} {
      // Users can read locations from same company
      allow read: if isAuthenticated();
      
      // Users can only create their own location records
      allow create: if isAuthenticated() && 
                      request.resource.data.employeeId == request.auth.uid;
      
      // No updates or deletes allowed (immutable location log)
      allow update, delete: if false;
    }
    
    // Attendance collection
    match /attendance/{attendanceId} {
      // Users can read their own attendance or admins can read all
      allow read: if isOwner(resource.data.employeeId) || isAdmin();
      
      // Users can create their own attendance
      allow create: if isAuthenticated() && 
                      request.resource.data.employeeId == request.auth.uid;
      
      // Users can update their own attendance (for check-out), admins can update any
      allow update: if isOwner(resource.data.employeeId) || isAdmin();
      
      // Only admins can delete attendance records
      allow delete: if isAdmin();
    }
    
    // Geofences collection
    match /geofences/{geofenceId} {
      // Users can read geofences from same company
      allow read: if belongsToCompany(resource.data.companyId);
      
      // Only admins can write geofences
      allow write: if isAdmin();
    }
    
    // Leaves/Leave Requests collection
    match /leaves/{leaveId} {
      // Users can read their own leave requests or if they are admin
      allow read: if isOwner(resource.data.employeeId) || isAdmin();
      
      // Users can create their own leave requests
      allow create: if isAuthenticated() && 
                      request.resource.data.employeeId == request.auth.uid;
      
      // Users can update their own leave requests if pending, admins can update any
      allow update: if (isOwner(resource.data.employeeId) && resource.data.status == 'pending') || isAdmin();
      
      // Only admins can delete leave requests
      allow delete: if isAdmin();
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
